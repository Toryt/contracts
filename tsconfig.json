{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "outDir": "./dist",
    "noEmitOnError": false,
    "target": "es2018",
    "module": "commonjs",
    "downlevelIteration": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "lib": [
      "es2018"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "lib/**/*",
    "test/50.d.ts/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    ".min-wd*.js",
    "scripts/**",
    "coverage/**",
    "browser/**"
  ]
}
