{
  "name": "@toryt/contracts",
  "version": "7.0.0-ts.0",
  "description": "Design-by-Contract and Test-by-Contract for JavaScript and TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "directories": {
    "test": "test-js"
  },
  "scripts": {
    "status": "depcheck; ncu; npm audit || exit 0",
    "build:src": "tsc --project tsconfig.json",
    "build:test": "tsc --project test2/tsconfig.json",
    "build": "npm run build:src && npm run build:test",
    "lint": "eslint \"{src,test2}/**/*\"",
    "test:ts": "TS_NODE_PROJECT='./test2/tsconfig.json' mocha --config .mocharc-ts.yaml",
    "test:js": "nyc mocha 'test2/js/**/*.test.js'",
    "pretest": "npm run build",
    "test": "npm run lint && tsd && npm run test:ts && npm run test:js",
    "format": "prettier -w .",
    "preversion": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/toryt/contracts"
  },
  "keywords": [
    "design-by-contract",
    "test-by-contract",
    "Toryt",
    "unit",
    "test",
    "contract",
    "contracts",
    "precondition",
    "postcondition",
    "invariant"
  ],
  "author": {
    "name": "Jan Dockx",
    "email": "jandockx@gmail.com"
  },
  "contributors": [],
  "license": "Apache-2.0",
  "homepage": "https://bitbucket.org/toryt/contracts",
  "bugs": {
    "url": "https://bitbucket.org/toryt/contracts/issues"
  },
  "engines": {
    "node": ">=v22.10.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.17.0",
    "eslint-plugin-depend": "^0.12.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-no-secrets": "^2.1.1",
    "globals": "^15.14.0",
    "just.randomstring": "^0.1.1",
    "mocha": "^11.0.1",
    "neostandard": "^0.12.0",
    "npm-check-updates": "^17.1.11",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.2",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "always",
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "tsd": {
    "directory": "test2/d"
  },
  "mocha": {
    "require": [
      "should"
    ],
    "checkLeaks": true,
    "reporter": "dot",
    "recursive": true,
    "extension": "test.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ]
  },
  "notes": {}
}
