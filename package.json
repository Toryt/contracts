{
  "name": "@toryt/contracts-iv",
  "version": "4.0.0-pre.0",
  "description": "Design-by-Contract and Test-by-Contract for JavaScript",
  "main": "src/IV/Contract.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm-check -i standard -i mocha-reporter -i legally -i tldrlegal; npm outdated || exit 0",
    "test": "standard && nyc mocha 'test/**/*Test.js'",
    "legalReport": "legally -l -r && tldrlegal",
    "browserify": "browserify -s toryt.contracts.iv --outfile contracts.js lib/IV/Contract.js",
    "browserifyTest": "browserify -r must --outfile browser/test/suite.js test/**/*Test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/toryt/contracts.git"
  },
  "keywords": [
    "design-by-contract",
    "test-by-contract",
    "Toryt",
    "unit",
    "test",
    "contract",
    "contracts",
    "precondition",
    "postcondition",
    "invariant"
  ],
  "author": {
    "name": "Jan Dockx",
    "email": "jandockx@gmail.com"
  },
  "contributors": [],
  "license": "Apache-2.0",
  "homepage": "https://bitbucket.org/toryt/contracts#readme",
  "bugs": {
    "url": "https://bitbucket.org/toryt/contracts/issues?status=new&status=open"
  },
  "engines": {
    "node": ">=8.11.2",
    "npm": ">=5.6.0"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.2.2",
    "just.randomstring": "^0.1.1",
    "legally": "^2.10.0",
    "mocha": "^5.2.0",
    "mocha-reporter": "^0.1.1",
    "must": "^0.13.4",
    "npm-check": "^5.7.1",
    "nyc": "^12.0.2",
    "standard": "^11.0.1",
    "tldrlegal": "^1.0.6"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ]
  }
}
