{
  "name": "@toryt/contracts-iv",
  "version": "4.0.0",
  "description": "Design-by-Contract and Test-by-Contract for JavaScript",
  "main": "lib/IV/Contract.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm-check -i standard -i mocha-reporter -i legally -i tldrlegal -i inherits -i _process -i kindof -i lodash._root -i lodash._createwrapper -i lodash.wrap -i oolong -i json-stringify-safe -i egal; npm outdated || exit 0",
    "test": "standard && nyc mocha --reporter dot 'test/**/*Test.js'",
    "legalReport": "legally -l -r && tldrlegal",
    "browserify": "browserify -s toryt.contracts.iv --outfile contracts.js lib/IV/Contract.js",
    "browserifyTest": "browserify -r must --outfile browser/test/suite.js test/**/*Test.js",
    "browserTest": "mochify --allow-chrome-as-root --reporter dot 'test/**/*Test.js'",
    "watch": "mochify --watch --reporter min 'test/**/*Test.js'",
    "wd": "mochify --wd --wd-file .min-wd.js --async-polling false --reporter dot 'test/**/*Test.js'",
    "format": "prettier-standard \"**/*.{js,md,json}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Toryt/contracts.git"
  },
  "keywords": [
    "design-by-contract",
    "test-by-contract",
    "Toryt",
    "unit",
    "test",
    "contract",
    "contracts",
    "precondition",
    "postcondition",
    "invariant"
  ],
  "author": {
    "name": "Jan Dockx",
    "email": "jandockx@gmail.com"
  },
  "contributors": [],
  "license": "Apache-2.0",
  "homepage": "https://github.com/Toryt/contracts",
  "bugs": {
    "url": "https://github.com/Toryt/contracts/issues"
  },
  "engines": {
    "node": ">=6.14.3",
    "npm": ">=3.10.10"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.2.3",
    "just.randomstring": "^0.1.1",
    "legally": "^3.2.1",
    "mocha": "^5.2.0",
    "mocha-reporter": "^0.1.1",
    "mochify": "^6.0.3",
    "must": "^0.13.4",
    "npm-check": "^5.7.1",
    "nyc": "^13.0.1",
    "prettier-standard": "^8.0.1",
    "standard": "^12.0.1",
    "tldrlegal": "^1.0.6"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "html",
      "text"
    ]
  },
  "notes": {
    "ignore npm-check": "-i inherits -i _process -i kindof -i lodash._root -i lodash._createwrapper -i lodash.wrap -i oolong -i json-stringify-safe -i egal are added by browserify"
  }
}
